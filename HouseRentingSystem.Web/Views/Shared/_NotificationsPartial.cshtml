@using static HouseRentingSystem.Common.NotificationsMessages;

@if (TempData.ContainsKey(ErrorMessage))
{
    <script>
        toastr.options.positionClass = 'toast-top-center';
        toastr.error('@TempData[ErrorMessage]');
    </script>
}

